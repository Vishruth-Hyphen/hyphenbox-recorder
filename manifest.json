{
  "manifest_version": 3,
  "name": "User Interaction Recorder",
  "version": "1.0",
  "description": "Records user interactions for playback",
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 